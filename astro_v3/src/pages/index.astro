<style lang="scss">
@use "../styles/variables";

@import "../styles/main.scss";

.homepage {
  color: variables.$ts-blue-color;

  &__header-blob {
    display: block;
    position: absolute;
    width: 1400px;
    overflow: visible;
    top: -400px;
    left: -900px;
    z-index: -1;

    @media only screen and (max-width: variables.$ts-mobile-max) {
      transform: scaleX(-1);
      left: -50px;
      top: -350px;
    }
  }

  &__header-hex {
    display: block;
    position: absolute;
    width: 1400px;
    overflow: visible;
    top: -630px;
    left: -1040px;
    z-index: -1;
  }

  &__header-hex-logo {
    display: block;
    position: absolute;
    width: 1400px;
    overflow: visible;
    top: -480px;
    left: -320px;
    z-index: -1;
  }

  &__middle-blob {
    display: block;
    position: absolute;
    width: 1400px;
    overflow: visible;
    right: -1125px;
    // top: 1525px; // FIXME: ripristinare con la sezione sviluppo software
    top: 925px;
    z-index: -1;
  }

  &__middle-hex {
    display: block;
    position: absolute;
    width: 1400px;
    overflow: visible;
    right: -1125px;
    // top: 1225px; // FIXME: ripristinare con la sezione sviluppo software
    top: 625;
    z-index: -1;
  }

  &__middle-hex-tablet,
  &__middle-hex-mobile,
  &__header-hex-mobile,
  &__header-hex-logo-mobile,
  &__header-blob-mobile {
    display: none;
  }

  &__hex-mobile-1,
  &__hex-mobile-2,
  &__hex-mobile-3,
  &__hex-mobile-4,
  &__hex-mobile-5,
  &__hex-mobile-6 {
    display: none;
  }

  @media only screen and (max-width: variables.$ts-mobile-max) {
    &__hex-mobile-1,
    &__hex-mobile-2,
    &__hex-mobile-3,
    &__hex-mobile-4,
    &__hex-mobile-5,
    &__hex-mobile-6 {
      display: block;
      position: absolute;
      overflow: visible;
      z-index: -1;
    }
    &__hex-mobile {
      &-1 {
        top: -100px;
        left: 300px;
      }
      &-2 {
        top: -70px;
        left: 380px;
      }
      &-3 {
        top: 170px;
        left: 450px;
      }
      &-4 {
        top: 170px;
        left: 300px;
      }
      &-5 {
        top: 175px;
        left: 25px;
      }
      &-6 {
        top: 300px;
        left: 275px;
      }
    }

    &__header-hex,
    &__header-hex-logo,
    &__middle-blob,
    &__middle-hex,
    &__middle-hex-tablet {
      display: none;
    }

    &__middle-hex-mobile {
      display: block;
      position: absolute;
      width: 1400px;
      overflow: visible;
      right: -1155px;
      // top: 1450px; FIXME: ripristinare con la sezione sviluppo software
      top: 770px;
      z-index: -1;
    }
  }

  @media only screen and (max-width: variables.$ts-tablet-max) {
    &__header-hex-logo {
      left: -370px;
    }

    &__header-hex {
      left: -1350px;
    }

    &__middle-blob,
    &__middle-hex {
      display: none;
    }

    &__middle-hex-tablet {
      display: block;
      position: absolute;
      width: 1400px;
      overflow: visible;
      right: -1155px;
      // top: 1975px; FIXME: ripristinare con la sezione sviluppo software
      top: 1225px;
      z-index: -1;

      @media only screen and (max-width: variables.$ts-mobile-max) {
        display: none;
      }
    }
  }

  @media only screen and (min-width: variables.$ts-tablet-min) and (max-width: 700px) {
    &__header-hex-logo {
      left: -390px;
    }
  }
}

.home-hero {
  margin-top: variables.$ts-spacing-9;
  display: flex;
  justify-content: flex-end;
  margin-bottom: variables.$ts-spacing-25;
  font-size: 48px;
  line-height: 67px;
  color: variables.$ts-blue-color;

  &__banner {
    flex: 0 0 65%;
  }

  &__text {
    margin-bottom: 80px;
  }

  &__button {
    display: flex;
    justify-content: center;
  }
}

@media only screen and (max-width: variables.$ts-mobile-max) {
  .home-hero {
    margin-top: variables.$ts-spacing-15;
    display: flex;
    margin-bottom: 24px;
    font-size: 25px;
    color: variables.$ts-blue-color;
    justify-content: center;
    width: 100%;
    line-height: 37px;

    &__text {
      margin-bottom: 80px;
    }

    &__banner {
      flex: 0 0 80%;
      text-align: center;
    }

    &__button {
      display: flex;
      justify-content: center;
    }
  }
}

</style>
</html>
