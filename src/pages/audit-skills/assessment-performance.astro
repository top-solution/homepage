---
import Layout from "../../components/Layout.astro";
import Button from "../../components/Button.astro";
import Blob from "../../components/Blob.astro";
import Hex from "../../components/Hex.astro";
import RequestTrial from "../../components/audit-skills/RequestTrial.astro";
import PrincingTable from "../../components/audit-skills/PricingTable.astro"
import { assessmentPerformanceHeader, assessmentPerformance } from "../../utils/tables.js";
---

<Layout color="light" subPages={true}>
  <article itemscope itemtype="https://schema.org/Service">
    <section>
      <div class="copy">
        <div class="floating-hex-0">
          <Hex width="85" fill="#312783" shadow="true" />
        </div>
        <div class="floating-hex-1">
          <Hex width="185" fill="#312783" shadow="true" />
        </div>
        <div class="floating-hex-2">
          <Hex width="85" fill="#0078C3" shadow="true" />
        </div>
        <div class="floating-hex-6">
          <Hex width="55" fill="#8883B6" shadow="true" />
        </div>
        <h4 itemprop="name" id="audit">Valutazione performance</h4>
        <p itemprop="description">
          Permette di comprendere quali risultati professionali ha raggiunto la persona nel corso del tempo e come ha
          espresso il proprio contributo all’interno dell’organizzazione.
        </p>
        <ul>
          <li> &#11042; <span>Auto Valutazione</span></li>
          <li> &#11042; <span>Etero Valutazione</span></li>
        </ul>
        <div class="floating-hex-3">
          <Hex width="65" fill="#312783" shadow="true" />
        </div>
      </div>
      <div class="button">
        <Button variant="primary" href="/contacts/">Contattaci</Button>
      </div>
      <div class="button" onclick="handleFreeTryClick()">
        <Button variant="tertiary">Prova Gratuita</Button>
      </div>
    </section>
    <PrincingTable header={assessmentPerformanceHeader} rows={assessmentPerformance} itemprop="offers" />
    <div class="floating-hex-4">
      <Hex width="65" fill="#0078C3" shadow="false" rotation="-4" />
    </div>
    <div class="blob">
      <Blob interactive={true} shape="hexagon" fill="#E3F1FA" padding="46" variance="1.2">
        <div class="blob-content">
          <p class="title-6">Desideri un <b>piano custom</b>?</p>
          <p class="title-6">Scegli il piano <b>ENTERPRISE</b></p>
          <div class="button">
            <Button variant="primary" href="/contacts.html" style="display: inline-block">
              Contattaci
            </Button>
          </div>
        </div>
      </Blob>
    </div>
    <section>
      <div id="free-try" />
      <RequestTrial />
    </section>
  </article>
</Layout>

<script type="text/javascript">
  function handleFreeTryClick() {
    document.getElementById("free-try").scrollIntoView(true);
  }
</script>

<style>
  section {
    margin-bottom: var(--spacing-5);
  }

  .custom-plan {
    background-color: var(--color-blue-background);
    color: var(--color-blue);
    padding: 16px 24px;
  }

  .floating-hex-0 {
    width: 130px;
    position: absolute;
    top: -200px;
    left: -400px;
  }

  .floating-hex-1 {
    width: 85px;
    position: absolute;
    top: -400px;
    left: 900px;
    transform: rotate(15deg);
  }

  .floating-hex-2 {
    width: 85px;
    position: absolute;
    top: -25px;
    left: 600px;
  }

  .floating-hex-6 {
    width: 85px;
    position: absolute;
    top: 125px;
    left: 775px;
  }

  article {
    display: block;
    color: var(--color-blue);
    box-sizing: border-box;
  }

  .floating-hex-3 {
    width: 130px;
    position: absolute;
    top: 375px;
    left: 600px;
  }

  .floating-hex-4 {
    width: 425px;
    height: 50px;
    display: block;
    margin-left: auto;
    margin-right: var(--spacing-3);
  }

  .copy {
    width: 60%;
    margin-top: var(--spacing-15);
    position: relative;
  }

  .copy p {
    flex: 1 1 0;
    margin-top: var(--spacing-5);
    font-size: 25px;
  }
  .button {
    margin: 0 auto;
    max-width: 150px;
    margin-top: var(--spacing-2)
  }

  ul {
    position: relative;
    list-style: none;
    margin-left: 0;
    padding-left: 1.2em;
  }

  ul span {
    padding-left: var(--spacing-1);
  }


  ul li:before {
    position: absolute;
    left: 0;
  }

  ul li {
    font-weight: 700;
    text-transform: uppercase;
    margin-bottom: var(--spacing-0-5)
  }

  .blob {
    display: block;
    max-width: 340px;
    margin: 110px auto var(--spacing-15);
    width: 100%;
  }

  .blob-content {
    text-align: center;
    margin: 0 var(--spacing-5) 0 var(--spacing-8);
  }

  .blob-content .button {
    max-width: 175px;
    margin: var(--spacing-3) auto 0 auto;
  }


  @media only screen and (max-width: 600px) {
    .floating-hex-3 {
      display: none;
    }

    .floating-hex-0 {
      top: 25px;
      left: 400px;
    }

    .floating-hex-6 {
      top: 275px;
      left: 425px;
    }


    .floating-hex-4 {
      width: 45px;
      margin-right: 134px;
    }

    .copy {
      align-items: flex-start;
      margin: var(--spacing-10) 0;
    }

    .copy p {
      font-size: 20px;
      margin-top: 0;
    }

    .blob {
      margin-top: 100px;
    }
  }

  @media only screen and (max-width: 960px) {
    .copy {
      margin-left: var(--spacing-2);
    }

    .copy p {
      text-align: left;
    }
  }

  @media only screen and (min-width: 601px) and (max-width: 960px) {
    .floating-hex-3 {
      display: none;
    }
  }
</style>