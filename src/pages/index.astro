---
import Layout from "../components/Layout.astro";
import TripleBlob from "../components/TripleBlob.astro";
import Customers from "../components/Customers.astro";
import Hex from "../components/Hex.astro";
import { developmentHumanResourceBlobs, developmentSoftwareBlobs } from "../utils/tripleBlobs";

---

<Layout color="dark">
  <article>
    <div class="header-blob">
      <img src="img/homepage/blob-header-homepage.svg" alt="" />
    </div>
    <div class="header-blob-mobile">
      <img src="img/homepage/blob-header-homepage.svg" alt="" />
    </div>
    <div class="header-hex">
      <img src="img/homepage/group-hex-header-desktop.svg" alt="" />
    </div>
    <div class="header-hex-mobile">
      <img src="img/homepage/group-hex-header-desktop.svg" alt="" />
    </div>
    <div class="header-hex-logo">
      <img src="img/homepage/hex-logo-header.svg" alt="" />
    </div>
    <div class="header-hex-logo-mobile">
      <img src="img/homepage/hex-logo-header.svg" alt="" />
    </div>
    <div class="hex-mobile-1">
      <img src="img/homepage/homepage-mobile-hex-1.svg" alt="" />
    </div>
    <div class="hex-mobile-2">
      <img src="img/homepage/homepage-mobile-hex-2.svg" alt="" />
    </div>
    <div class="hex-mobile-3">
      <img src="img/homepage/homepage-mobile-hex-3.svg" alt="" />
    </div>
    <div class="hex-mobile-4">
      <img src="img/homepage/homepage-mobile-hex-4.svg" alt="" />
    </div>
    <div class="hex-mobile-5">
      <img src="img/homepage/homepage-mobile-hex-5.svg" alt="" />
    </div>
    <div class="hex-mobile-6">
      <img src="img/homepage/homepage-mobile-hex-6.svg" alt="" />
    </div>
    <section>
      <p id="homeBanner">
        Scopri le opportunit√† per il tuo business offerte dalle nostre soluzioni
      </p>
      <div class="floating-hex-0">
        <Hex width="65" fill="#312783" shadow="true" />
      </div>
    </section>
    <TripleBlob title="SVILUPPO DELLE RISORSE UMANE" blobs={developmentHumanResourceBlobs} />
    <div class="floating-hex-1">
      <Hex width="45" fill="#0069A7" shadow="true" />
    </div>
    <TripleBlob title="SVILUPPO SOFTWARE" blobs={developmentSoftwareBlobs} />
    <div class="middle-blob">
      <img src="img/homepage/blob-middle-homepage.svg" alt="" />
    </div>
    <div class="middle-hex">
      <img src="img/homepage/group-hex-middle-desktop.svg" alt="" />
    </div>
    <div class="middle-hex-mobile">
      <img src="img/homepage/group-hex-middle-mobile.svg" alt="" />
    </div>
    <div class="middle-hex-tablet">
      <img src="img/homepage/group-hex-middle-mobile.svg" alt="" />
    </div>
    <div id="customers" />
    <Customers title="I nostri clienti" />
  </article>
</Layout>

<style>
  .floating-hex-0 {
    width: 130px;
    position: absolute;
    top: 75px;
    left: 850px;
  }

  .floating-hex-1 {
    width: 130px;
    position: absolute;
    top: 625px;
    left: 50px;
  }

  article {
    color: var(--color-blue);
    position: relative;
  }

  article .middle-hex-tablet,
  article .middle-hex-mobile,
  article .header-hex-mobile,
  article .header-hex-logo-mobile,
  article .header-blob-mobile {
    display: none;
  }

  article .hex-mobile-1,
  article .hex-mobile-2,
  article .hex-mobile-3,
  article .hex-mobile-4,
  article .hex-mobile-5,
  article .hex-mobile-6 {
    display: none;
  }

  article .header-blob {
    display: block;
    position: absolute;
    width: 1400px;
    overflow: visible;
    top: -400px;
    left: -900px;
    z-index: -1;
  }

  article .header-hex {
    display: block;
    position: absolute;
    width: 1400px;
    overflow: visible;
    top: -975px;
    left: -1480px;
    z-index: -1;
  }

  article .header-hex-logo {
    display: block;
    position: absolute;
    width: 1400px;
    overflow: visible;
    top: -526px;
    left: -675px;
    z-index: -1;
    transform: rotate(82deg);
  }

  article .middle-blob {
    display: block;
    position: absolute;
    width: 1400px;
    overflow: visible;
    right: -1225px;
    top: 825px;
    z-index: -1;
  }

  article .middle-hex {
    display: block;
    position: absolute;
    width: 1400px;
    overflow: visible;
    right: -1225px;
    top: 525px;
    z-index: -1;
  }

  section {
    margin-top: var(--spacing-10);
    display: flex;
    justify-content: flex-end;
    margin-bottom: var(--spacing-10);
    font-size: 48px;
    line-height: 67px;
    color: var(--color-blue);
  }

  section p {
    margin-bottom: 80px;
    font-size: 33px;
    margin: 0 var(--spacing-10);
    text-align: center;
  }

  @media only screen and (max-width: 960px) {
    article .header-hex-logo {
      left: -760px;
      transform: rotate(81deg);
    }

    article .header-hex {
      left: -1400px;
    }

    article .middle-hex-tablet {
      display: block;
      position: absolute;
      width: 1400px;
      overflow: visible;
      right: -1155px;
      top: 1125px;
      z-index: -1;
    }

    article .middle-blob,
    article .middle-hex {
      display: none;
    }

    section {
      margin-bottom: var(--spacing-15);
    }
  }

  @media only screen and (min-width: 961px) and (max-width: 700px) {
    article .header-hex-logo {
      left: -390px;
    }
  }

  @media only screen and (max-width: 700px) {
    .floating-hex-1 {
      display: none;
    }
  }


  @media only screen and (max-width: 600px) {

    article .header-blob {
      display: none;
    }

    article .middle-hex-mobile {
      display: none;
    }

    article .middle-hex-tablet {
      display: none;
    }

    article .header-hex,
    article .header-hex-logo,
    article .middle-blob,
    article .middle-hex,
    article .middle-hex-tablet {
      display: none;
    }

    article .hex-mobile-1 {
      display: unset;
      position: absolute;
      top: -60px;
      left: 275px;
    }

    article .hex-mobile-2 {
      display: unset;
      position: absolute;
      top: 25px;
      left: 400px;
    }

    article .hex-mobile-3 {
      display: unset;
      position: absolute;
      top: 290px;
      left: 470px;
    }

    article .hex-mobile-4 {
      display: unset;
      position: absolute;
      top: 170px;
      left: 0px;
    }

    article .hex-mobile-5 {
      display: unset;
      position: absolute;
      top: 375px;
      left: -25px;
    }

    article .hex-mobile-6 {
      display: unset;
      position: absolute;
      top: 450px;
      left: 300px;
    }

    section {
      display: none
    }
  }
</style>