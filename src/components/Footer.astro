<style>
  footer {
    background-color: var(--color-blue-footer);
    width: 100%;
    font-weight: 300;
    color: var(--color-white);
  }

  nav {
    display: flex;
    justify-content: space-evenly;
    margin: 0 auto;
    padding: var(--spacing-3) 0;
    max-width: var(--breakpoint-tablet-max);
    line-height: 28px;
  }

  nav ul {
    flex: 0 0 20%;
    list-style: none;
  }

  nav li {
    margin: var(--spacing-1-5) 0;
    font-weight: 400;
  }

  .bordered-box {
    flex: 0 0 32%;
    border-left: 1px solid var(--color-white);
    padding-left: var(--spacing-3);
    margin-left: var(--spacing-3);
    font-weight: 400;
  }

  .bordered-box li {
    color: var(--color-white);
  }

  .bordered-box div {
    margin: var(--spacing-1-5) 0;
    line-height: 18px;
  }

  aside {
    margin-top: 28px;
    min-height: 180px;
    background-color: var(--color-blue-footer);
  }

  aside .container {
    display: flex;
    margin-bottom: var(--spacing-5);
    justify-content: center;
  }

  img {
    margin-right: 18px;
  }

  p {
    color: var(--color-white);
    border-left: 1px solid var(--color-white);
    font-size: 15px;
    line-height: 18px;
    padding-left: 16px;
    width: 173px;
  }

  .iva {
    font-size: 15px;
    line-height: 18px;
    text-align: center;
  }

  a {
    color: var(--color-white);
  }

  h5 {
    margin: 0 0 var(--spacing-2);
    font-weight: 500;
    color: var(--color-white);
  }

  .picture {
    width: 20px;
    height: 20px;
    display: inline-block;
  }

  .spacing {
    margin-left: var(--spacing-2) !important;
  }

  /* Mobile */
  @media only screen and (max-width: 600px) {

    .iva {
      display: flex;
      flex-direction: column;
      margin: 0 auto;
    }

    .iva span {
      margin: var(--spacing-1) 0;
    }

    nav {
      flex-wrap: wrap;
      padding: var(--spacing-3);
      justify-content: flex-start;
      line-height: 28px;
    }

    nav ul {
      flex: 0 0 100%;
      margin-bottom: var(--spacing-3);
      text-align: center;
      padding-left: 0;
    }

    nav .bordered-box {
      flex: 0 0 100%;
      border-top: 1px solid var(--color-white);
      border-bottom: 1px solid var(--color-white);
      border-left: none;
      padding: var(--spacing-3) 0;
      margin-left: 0;
      margin-top: var(--spacing-3);
      text-align: center;
    }

    .bordered-box a {
      color: var(--color-white);
    }

    .bordered-box a,
    div {
      max-width: 290px;
      margin: var(--spacing-1-5) auto;
    }

    hr {
      display: none !important;
    }
  }

  @media only screen and (max-width: 960px) {
    footer {
      height: auto;
    }
  }

  @media only screen and (min-width: 601px) and (max-width: 960px) {
    .bordered-box {
      flex: 0 0 20%;
    }
  }
</style>