import { contacts } from "../utils/contacts";
const { subPages } = Astro.props;

---

<footer itemscope itemtype="https://schema.org/Organization">
  <nav aria-label="Menù footer">
    <ul>
      <h5>Home</h5>
      <li><a href="/company/" id="company">Azienda</a></li>
      <li><a href="/team/" id="team">Team</a></li>
      <li><a href="/#customers" id="customers">Clienti</a></li>
    </ul>
    <ul>
      <h5>HR</h5>
      <li><a href="/hr/audit-skills/" id="auditCompetence">Audit competenze</a></li>
      <li><a href="/hr/company-development/" id="companyDev">Sviluppo organizzativo</a></li>
      <li><a href="/hr/self-development/" id="selfDevelopment">Sviluppo individuale</a></li>
    </ul>
    <ul>
      <h5>DEV</h5>
      <li><a href="/dev/web-applications-mobile/" id="webApplication">Applicazioni web e mobile</a></li>
