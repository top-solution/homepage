---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import "../../src/styles/global.css";
import "../../src/styles/normalize.css";
import "../../src/styles/typography.css";
import "../../src/utils/func.js"

const { color = "light", subPages } = Astro.props;
---

<html class="no-js" lang="it" dir="ltr">

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="user-scalable=no, width=device-width, initial-scale=1.0" />

  <meta name="description" content="Ideas for the Future" />
  <meta property="og:title" content="Top Solution" />
  <meta property="og:description" content="Ideas for the Future" />
  <meta property="og:type" content="website" />
  <meta property="og:url" content="https://topsolution.it/" />
  <meta property="og:locale" content="it_IT" />
  <meta property="og:image" content="https://topsolution.it/img/topsolution_og_logo.png" />
  <meta property="og:site_name" content="Top Solution" />
  <meta name="twitter:card" content="summary" />
  <meta name="twitter:site" content="https://topsolution.it/" />
  <meta name="twitter:description" content="Ideas for the Future" />
  <meta name="twitter:title" content="Top Solution - Ideas for the future" />
  <meta name="twitter:image" content="https://topsolution.it/img/topsolution_og_logo.png" />
  <meta name="twitter:image:alt" content="Top Solution - Ideas for the future" />
  <base href="/">
  <link rel="canonical" href="https://topsolution.it/" />

  <title>Top Solution</title>
  <link rel="manifest" href={subPages ? "../../site.webmanifest" : "../site.webmanifest" } />
  <link rel="icon" type="image/x-icon" href={subPages ? "../../img/logo.svg" : "../img/logo.svg" } />
</head>

<script>
  if (localStorage.getItem("language") === null || localStorage.getItem("language") === "it") {
    localStorage.setItem("language", "it")
  } else if (localStorage.getItem("language") === "en") {
    localStorage.setItem("language", "en")
  }
</script>

<body>
  <Header {color} subPages />
  <main class="wrapper">
    <slot />
  </main>
  <Footer subPages />
</body>

</html>