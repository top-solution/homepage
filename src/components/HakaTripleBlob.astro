---
const { title, subtitle, blobs, buttonlink } = Astro.props;
---

<section itemscope itemtype="https://schema.org/Service">
  <h4 itemprop="name">{title}</h4>
  <p itemprop="description">{subtitle}</p>
  <div class="container">
    {blobs.map((blob) => (
    <a href={blob.href}>
      <div class="card">
        <p>
          <b>{blob.title}</b>
        </p>
        <div class="centred-button">
          <button class="outlined" href={blob.href} type="button">
            Vai al Piano
          </button>
        </div>
      </div>
    </a>
    ))}
  </div>
</section>

<style>
  .container {
    display: flex;
    justify-content: space-between;
    margin: var(--spacing-10) 0;
    color: var(--color-blue);
  }

  .card {
    border: 0.8px solid var(--color-blue);
    border-radius: 4px;
    padding: var(--spacing-1);
    display: flex;
    text-align: center;
  }

  .card p {
    font-size: 20px;
    flex: 0 0 50%;
  }

  .centred-button {
    flex: 0 0 50%;
    align-items: center;
  }

  h4 {
    font-size: 18px;
    text-align: center;
  }

  section p {
    text-align: center;
    /* margin-bottom: var(--spacing-10); */
    font-size: 22px;
  }

  .container-mobile {
    display: none;
  }

  a {
    margin: 0 var(--spacing-2);
    min-width: 260px;
  }

  .text {
    text-align: center;
  }

  p {
    margin-bottom: var(--spacing-1);
  }

  h1 {
    margin-top: var(--spacing-20)
  }

  .outlined {
    box-shadow: rgba(0, 0, 0, 0.2) 0px 2px 4px -1px, rgba(0, 0, 0, 0.14) 0px 4px 5px 0px,
      rgba(240, 177, 177, 0.12) 0px 1px 10px 0px;
    border: 0;

    color: var(--color-white);
    border: 1px solid var(--color-blue);
    background-color: var(--color-blue);
    border-radius: 4px;
    padding: 8px;
    align-items: center;
    transition: background-color var(--transition-timing-quick) var(--transition-function-default);
  }

  .outlined:hover {
    background-color: var(--color-blue);
    color: white;
    cursor: pointer;
  }

  @media only screen and (max-width: 960px) {

    .card {
      margin: var(--spacing-5) 0;
    }

    .container {
      display: flex;
      flex-direction: column;
      align-items: center;
    }

    a {
      display: flex;
      align-items: center;
      width: 327px;
      height: 90px;
      border-radius: 4px;
      margin: var(--spacing-2) 0;
      padding: var(--spacing-2);
      justify-content: space-between;
    }

    svg {
      color: var(--color-white) !important;
      width: 32px;
      height: 32px;
    }
  }
</style>