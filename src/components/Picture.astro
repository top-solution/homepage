---
const {base = "", src = "", alt = "", extension = "png"} = Astro.props;
---

{extension === "png" && (
  <picture>
    <source
      srcset={`/img/${base}/${src}@2x.${extension} 2x, /img/${base}/${src}.${extension} 1x`}
    />
    <img loading="lazy" src={`/img/${base}/${src}.${extension}`} {alt} />
  </picture>
)}
{extension === "svg" && (
  <img loading="lazy" src={`/img/${base}/${src}.${extension}`} {alt} />
)}

<style lang="scss">
  img,
  picture {
    object-fit: contain;
    width: 100%;
    height: 100%;
    margin: var(--spacing-2);
    max-width: 120px;
  }

  @media only screen and (max-width: var(--breakpoint-mobile-max)) {
    img,
    picture {
      margin: var(--spacing-1);
      height: auto;
    }
  }
</style>
