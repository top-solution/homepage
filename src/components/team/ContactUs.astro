    position: relative;
    max-height: 0;
    transition: max-height var(--transition-timing-default) var(--transition-function-default),
      padding-top var(--transition-timing-default) var(--transition-function-default);
    overflow: hidden;
    padding-top: 0px;
  }

  section p {
    font-size: 22px;
    text-align: center;
  }

  h2 {
    text-align: center;
    margin-bottom: var(--spacing-4);
